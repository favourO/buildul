<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimary">

        <!--<com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/asix"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            app:civ_border_color="#fff"/>-->

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:typeface="sans"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:typeface="sans"
            android:textColor="#eee"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/full_name"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_order"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="4dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                    android:id="@+id/orders"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/my_orders"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_assignment_black_24dp"/>

                    <TextView
                        android:id="@+id/leave_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/leave_feedback"
                        android:typeface="sans"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/orders"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/fav_cust"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/card_order"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="3dp">

                <Button
                    android:id="@+id/service"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/customer_service"
                    android:textSize="16sp"
                    android:typeface="sans"
                    android:textColor="#000"
                    android:background="#fff"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_headset_mic_black_24dp"/>
            </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="@string/logout"
                    android:background="#fff"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_below="@+id/fav_cust"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>