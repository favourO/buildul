<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuildPlan">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_curve"
        android:layout_below="@+id/toolbar"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/name_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/user_name_build"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_curve"
        android:layout_below="@+id/name_user_layout"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/email_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/email_user"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/description_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_curve"
        android:layout_below="@+id/email_user_layout"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/description_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/feedback_will_enable_contact_you"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Get_plan_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="SUBMIT"
        android:background="@drawable/search_curve"
        android:layout_below="@+id/description_user_layout"/>

</RelativeLayout>